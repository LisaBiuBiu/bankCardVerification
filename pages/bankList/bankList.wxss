/* pages/my/bankList/bankList.wxss */
.scroll-view_H{
    white-space: nowrap;
    height: 172rpx;
}
.scroll-view-item{
    display: inline-block;
    width: 100%;
    height: 172rpx;
}
 .content{
    height: 172rpx;
    width: 100%;
    display: flex;
    align-items: center;
}
.bankImg{
    width: 110rpx;
    height: 110rpx;
    margin:0 32rpx;
}

.bankName{
    font-size: 32rpx;
    color: #101010;
}
.bank{
    font-size: 28rpx;
    color: #999;
}
.bankType{
    margin-right: 10rpx;
} 
.deleted{
    display: inline-block;
    width: 140rpx;
    height: 172rpx;
    background: #EC6272;
    color: #fff;
    text-align:center;
    line-height: 172rpx;
    position:relative;
    top:-35rpx;
}
.addBank {
    margin: 48rpx 36rpx;
    background: #EC6272;
    text-align: center;
    height: 80rpx;
    line-height: 80rpx;
    color: #fff;
    font-size: 28rpx;
    border-radius: 40rpx;
}